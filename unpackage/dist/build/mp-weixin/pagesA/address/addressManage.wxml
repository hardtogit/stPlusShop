<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','consignee','$event',[]],['addressData']]]]]}}" value="{{addressData.consignee}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" maxlength="11" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['addressData']]]]]}}" value="{{addressData.mobile}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['chooseAddres',['$event']]]]]}}" class="row b-b" bindtap="__e"><text class="tit">收货地址</text><view class="li"><block wx:if="{{addressData.address||addressData.addressName}}"><view class="input"><view class="address-name ellipsis">{{addressData.addressName}}</view><view class="address ellipsis">{{''+addressData.address}}</view></view></block><block wx:if="{{!addressData.address}}"><view class="input a"><view class="placeholder">点击选择</view></view></block></view><text class="yticon icon-you"></text></view><view class="row b-b"><text class="tit">详细描述</text><input class="input" type="text" placeholder="如:单元楼/门牌号等" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','addrDescription','$event',[]],['addressData']]]]]}}" value="{{addressData.addrDescription}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.isDefault==1}}" color="#F5222D" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>