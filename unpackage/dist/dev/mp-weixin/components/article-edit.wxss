.container {
  border: 1rpx solid #ddd;
  min-height: 300rpx;
  padding: 20rpx;
  padding-bottom: 100rpx;
  position: relative;
}
.container .textarea {
  width: 100%;
}
.container .image {
  display: block;
  width: 100%;
}
.container .btns {
  position: absolute;
  height: 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  bottom: 20rpx;
  width: 660rpx;
  left: 50%;
  -webkit-transform: translate3d(-50%, 0, 0);
          transform: translate3d(-50%, 0, 0);
}
.container .tools {
  text-align: right;
  padding: 20rpx 0;
}
.container .tools .image {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
}
.container .tools .sure {
  color: #FF474D;
  font-size: 25rpx;
}
.container .text {
  position: relative;
  text-align: justify;
}
.container .text-edit {
  width: 100%;
}

