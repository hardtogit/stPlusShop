.goods-item {
  width: 260rpx;
  height: 390rpx;
  box-sizing: border-box;
  margin-right: 15rpx;
  display: inline-block;
  box-shadow: 0px 8px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}
.goods-item.no-margion {
    margin-right: 0;
}
.goods-item .img {
    border-top-right-radius: 20rpx;
    border-top-left-radius: 20rpx;
    height: 280rpx;
    display: block;
    width: 260rpx;
    background-color: #ddd;
}
.goods-item .title {
    font-size: 25rpx;
    color: #333;
    font-weight: bold;
    padding: 18rpx 24rpx 12rpx 24rpx;
}
.goods-item .bottom {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding-left: 18rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.goods-item .bottom .price {
      font-size: 21rpx;
      color: #FF474C;
      font-weight: bold;
}
.goods-item .bottom .default {
      font-size: 15rpx;
      color: #808080;
      text-decoration: line-through;
      margin-left: 4rpx;
}
.goods-item .bottom .add-icon {
      display: block;
      width: 32rpx;
      height: 32rpx;
}

