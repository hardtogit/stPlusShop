}
.container .empty {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    padding-bottom: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background: #fff;
}
.container .empty image {
      width: 240rpx;
      height: 160rpx;
      margin-bottom: 30rpx;
}
.container .empty .empty-tips {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      font-size: 26rpx;
      color: #C0C4CC;
}
.container .empty .empty-tips .navigator {
        color: #004da0;
        margin-left: 16rpx;
        background: none;
        font-size: 26rpx;
        line-height: initial;
        padding: 0;
}
.container .empty .empty-tips .navigator:after {
          display: none;
}
/* 购物车列表项 */
.cart-list {
  width: 100%;
  display: block;
  background: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.cartTitle {
  width: 100%;
  display: block;
  border-bottom: 1px solid #f5f5f5;
  padding: 25rpx 30rpx;
  font-size: 30rpx;
  position: relative;
}
.cartTitle image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 60rpx;
  height: 60rpx;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.cart-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx 30rpx;
}
.cart-item .image-wrapper {
    width: 174rpx;
    height: 174rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    position: relative;
}
.cart-item .image-wrapper image {
      border-radius: 35rpx;
}
.cart-item .checkbox {
    position: absolute;
    left: -16rpx;
    top: -16rpx;
    z-index: 8;
    font-size: 44rpx;
    line-height: 1;
    padding: 4rpx;
    color: #C0C4CC;
    background: #fff;
    border-radius: 50px;
}
.cart-item .radio {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: baseline;
    -webkit-align-items: baseline;
            align-items: baseline;
    font-size: 24rpx;
    color: #808080;
}
.cart-item .radio .circle {
      width: 28rpx;
      height: 28rpx;
      border-radius: 50%;
      border: 1rpx solid #FF474D;
      margin-right: 10rpx;
      position: relative;
      top: 2rpx;
}
.cart-item .radio.active .circle {
      background-color: #FF474D;
}
.cart-item .item-right {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    overflow: hidden;
    position: relative;
    padding-left: 30rpx;
}
.cart-item .item-right .title {
      padding-right: 60rpx;
}
.cart-item .item-right .title,
    .cart-item .item-right .price {
      font-size: 30rpx;
      color: #303133;
      height: 40rpx;
      line-height: 40rpx;
}
.cart-item .item-right .attr {
      font-size: 26rpx;
      color: #909399;
      height: 50rpx;
      line-height: 50rpx;
}
.cart-item .item-right .price {
      height: 50rpx;
      line-height: 50rpx;
      margin-top: 70rpx;
      color: #FF474C;
}
.cart-item .item-right .step {
      position: absolute;
      right: 0;
      bottom: 0;
}
.cart-item .del-btn {
    padding: 4rpx 10rpx;
    font-size: 34rpx;
    height: 50rpx;
    color: #909399;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
/* 底部栏 */
.action-section {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 95;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  background: #fff;
  box-shadow: 0px 2px 19px 1px rgba(97, 97, 97, 0.13);
}
.action-section .checkbox {
    height: 52rpx;
    position: relative;
}
.action-section .checkbox image {
      width: 52rpx;
      height: 100%;
      position: relative;
      z-index: 5;
}
.action-section .clear-btn {
    position: absolute;
    left: 26rpx;
    top: 0;
    z-index: 4;
    width: 0;
    height: 52rpx;
    line-height: 52rpx;
    padding-left: 38rpx;
    font-size: 28rpx;
    color: #fff;
    background: #C0C4CC;
    border-radius: 0 50px 50px 0;
    opacity: 0;
    -webkit-transition: .2s;
    transition: .2s;
}
.action-section .clear-btn.show {
      opacity: 1;
      width: 120rpx;
}
.action-section .total-box {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    text-align: left;
    padding-right: 40rpx;
    padding-left: 20rpx;
}
.action-section .total-box .price {
      font-size: 36rpx;
      color: #FF474C;
      font-weight: bold;
}
.action-section .total-box .price text {
        font-size: 28rpx;
        margin-right: 2rpx;
}
.action-section .total-box .coupon {
      font-size: 24rpx;
      color: #909399;
}
.action-section .total-box .coupon text {
        color: #303133;
}
.action-section .confirm-btn {
    padding: 0 50rpx;
    margin: 0;
    border-radius: 100px;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    background: #FF474C;
    /* box-shadow: 1px 2px 5px rgba(0, 77, 160, 0.72) */
}
/* 复选框选中状态 */
.action-section .checkbox.checked,
.cart-item .checkbox.checked {
  color: #004da0;
}
.uni-numbox {
  right: 0;
  left: initial;
}
.Ash {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 10;
}
.cart-item.cur .del-btn {
  z-index: 12;
