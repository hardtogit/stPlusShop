page {
  background-color: #FBF8FB;
}
.header {
  height: 338rpx;
  position: relative;
}
.header .img {
    width: 100%;
    height: 100%;
}
.header .box {
    position: absolute;
    padding: 22rpx;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.header .box .top {
      position: absolute;
      width: 100%;
      padding: 0 42rpx;
      top: 22rpx;
      left: 0;
      height: 100rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.header .box .top .left {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        font-size: 28rpx;
        color: #fff;
}
.header .box .top .left .left-icon {
          color: #fff;
}
.header .box .top .right .turn {
        width: 31rpx;
        height: 31rpx;
        display: block;
}
.header .box .logo {
      display: block;
      width: 125rpx;
      height: 125rpx;
      background-color: #ddd;
      border-radius: 50%;
      margin: 50rpx auto 0 auto;
}
.header .box .store-name {
      color: #fff;
      font-size: 36rpx;
      text-align: center;
      margin-top: 6rpx;
}
.header .box .name {
      text-align: center;
      margin-top: 4rpx;
}
.header .box .name .own-name {
        display: inline-block;
        color: #fff;
        font-size: 33rpx;
}
.body {
  padding: 0 22rpx;
}
.body .card {
    background-color: #fff;
    border-radius: 9px;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}
.body .card .title {
      font-size: 33rpx;
      color: #333;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 100rpx;
      border-bottom: 1rpx solid #E4E7ED;
}

