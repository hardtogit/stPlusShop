.dynamic {
  padding: 0 30rpx 30rpx 30rpx;
}
.dynamic .dynamic-item {
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #DCDCDC;
}
.dynamic .dynamic-item .share-box {
      height: 70rpx;
}
.dynamic .dynamic-item .share {
      width: 28rpx;
      height: 28rpx;
      float: right;
      margin-top: 20rpx;
      position: relative;
}
.dynamic .dynamic-item .share .share-btn {
        position: absolute;
        width: 28rpx;
        height: 28rpx;
        top: 0;
        left: 0;
        opacity: 0;
}
.dynamic .dynamic-item .share .icon {
        display: block;
        width: 28rpx;
        height: 28rpx;
}
.dynamic .dynamic-item .store-title {
      font-size: 31rpx;
      color: #121212;
}
.dynamic .dynamic-item .sub-title {
      font-size: 26rpx;
      color: #616161;
      margin-top: 18rpx;
}
.dynamic .dynamic-item .pictures {
      margin-top: 24rpx;
}
.dynamic .dynamic-item .pictures .picture {
        width: 208rpx;
        display: inline-block;
        height: 203rpx;
        background-color: #ddd;
        margin-right: 30rpx;
        margin-bottom: 20rpx;
        border-radius: 8rpx;
}
.dynamic .dynamic-item .pictures .picture:nth-child(3n) {
          margin-right: 0;
}

