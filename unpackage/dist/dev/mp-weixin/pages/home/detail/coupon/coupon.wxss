.card {
  background-color: #fff;
  box-shadow: 0px 3px 19px 0px rgba(143, 143, 143, 0.14);
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 46rpx 38rpx;
}
.card.one .title {
    font-size: 42rpx;
    color: #000;
}
.card.one .img {
    width: 100%;
    height: 350rpx;
    border-radius: 7rpx;
    background-color: #ddd;
    margin-top: 30rpx;
}
.bottom {
  height: 110rpx;
  background-color: #fff;
  z-index: 10;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-shadow: 0px 2px 19px 1px rgba(97, 97, 97, 0.13);
}
.bottom .left {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-left: 20rpx;
}
.bottom .left .price {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: baseline;
      -webkit-align-items: baseline;
              align-items: baseline;
      color: #F0351C;
      margin-right: 10rpx;
}
.bottom .left .price .unit {
        font-size: 25rpx;
        margin-right: 4rpx;
}
.bottom .left .price .num {
        font-size: 56rpx;
}
.bottom .left .default {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: baseline;
      -webkit-align-items: baseline;
              align-items: baseline;
      position: relative;
      top: 8rpx;
      color: #A5A5A5;
      font-size: 25rpx;
      text-decoration: line-through;
}
.bottom .right {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
