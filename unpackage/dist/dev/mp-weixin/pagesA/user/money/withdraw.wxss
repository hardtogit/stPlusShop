.header-box {
  width: 700rpx;
  margin: 20rpx auto;
  box-shadow: 0px 2px 19px 1px rgba(97, 97, 97, 0.13);
  border-radius: 9px;
  overflow: hidden;
}
.header-box .money-container {
  height: 180rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #E6E6E6;
}
.header-box .money-container .left {
  font-size: 25rpx;
  color: #808080;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-left: 70rpx;
}
.header-box .money-container .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
}
.header-box .money-container .right .unit {
  font-size: 42rpx;
}
.header-box .money-container .right .num {
  font-size: 69rpx;
  font-weight: bold;
  height: 100rpx;
  padding-left: 20rpx;
}
.header-box .choice {
  padding: 65rpx 0 65rpx 70rpx;
  font-size: 33rpx;
  color: #333;
}
.header-box .items {
  text-align: center;
}
.header-box .items .item {
  display: inline-block;
  margin: 40rpx 80rpx;
}
.header-box .items .item .text {
  font-size: 25rpx;
  color: #808080;
}
.header-box .items .item.wx .img {
  width: 94rpx;
  height: 75rpx;
  display: block;
}
.header-box .items .item.wx .text {
  margin-top: 17rpx;
}
.header-box .items .item.card .img {
  width: 92rpx;
  height: 62rpx;
  display: block;
}
.header-box .items .item.card .text {
  margin-top: 24rpx;
}
.header-box .btn {
  width: 600rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 40rpx auto;
  border-radius: 10rpx;
  color: #fff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-color: #FF474C;
