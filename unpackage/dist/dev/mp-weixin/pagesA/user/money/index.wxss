.money .header-box {
  width: 700rpx;
  margin: 20rpx auto;
  padding: 70rpx 0;
  box-shadow: 0px 2px 19px 1px rgba(97, 97, 97, 0.13);
  border-radius: 9px;
  overflow: hidden;
}
.money .header-box .title {
  font-size: 25rpx;
  color: #808080;
  text-align: center;
}
.money .header-box .detail {
  text-align: center;
  margin-top: 20rpx;
  position: relative;
}
.money .header-box .detail .price-box {
  display: inline-block;
}
.money .header-box .detail .price-box .inner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
}
.money .header-box .detail .price-box .inner .unit {
  font-size: 42rpx;
}
.money .header-box .detail .price-box .inner .num {
  font-size: 69rpx;
  font-weight: bold;
}
.money .header-box .detail .more {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
  font-size: 25rpx;
  color: #FF474C;
}
.money .header-box .btn {
  width: 600rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 40rpx auto;
  border-radius: 10rpx;
  color: #fff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-color: #FF474C;
}
.money .header-box .tip {
  font-size: 25rpx;
  color: #808080;
  width: 600rpx;
  margin: 0 auto;
  text-align: justify;
}
.money .header-box .tip.one {
  margin-top: 50rpx;
}
.money .header-box .tip.two {
  margin-top: 30rpx;
}
.money .cell-box {
  box-shadow: 0px 2px 19px 1px rgba(97, 97, 97, 0.13);
  margin-top: 20rpx;
}
.money .cell {
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 25rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
}
.money .cell.border {
  border-bottom: 1rpx solid #DCDCDC;
}
.money .cell .left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.money .cell .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: right;
}

