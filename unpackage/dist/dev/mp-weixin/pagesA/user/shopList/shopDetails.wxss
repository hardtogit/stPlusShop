
page {
	background: #fff;
}
.mainBottom {
	float: initial;
}
.shopDetailsBanner {
	width: 100%;
	display: block;
	overflow: hidden;
}
.shopDetailsBanner image {
	width: 100%;
}
.shopDetailsTitle {
	text-align: center;
	font-size: 34rpx;
	color: #000;
	padding: 20rpx 30rpx;
}
.shopDetailsLabel {
	padding: 0 30rpx 30rpx;
}
.shopDetailsLabel .labelCon {
	color: #999;
}
.shopDetailsLabel .labelCon .money {
	font-size: 24rpx;
	margin-right: 40rpx;
	display: inline-block;
}
.shopDetailsLabel .labelCon .money text {
	font-size: 36rpx;
	color: #ea3800;
}
.shopDetailsLabel .labelCon .del {
	font-size: 24rpx;
	display: inline-block;
}
.shopDetailsLabel .labelCon .del text {
	position: relative;
}
.shopDetailsLabel .labelCon .del text:before {
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	right: 0;
	border-top: 1px solid #999;
}
.shopDetailsLabel .LabelAddress {
	font-size: 24rpx;
	color: #999;
	padding-left: 40rpx;
	position: relative;
	margin-top: 10rpx;
}
.shopDetailsLabel .LabelAddress:after {
	content: '\e9ae';
	position: absolute;
	left: 0;
	top: 50%;
	-webkit-transform: translateY(-50%);
	transform: translateY(-50%);
	font-size: 30rpx;
	color: #999;
}
.shopDetailsInfo {
	width: 100%;
	display: block;
	overflow: hidden;
	padding: 0 30rpx;
}
.shopDetailsInfoTit {
	border-top: 1px solid #f5f5f5;
	padding: 30rpx 0 20rpx;
	font-size: 34rpx;
	color: #000;
}
.shopDetailsInfoCon .content {
	font-size: 28rpx;
	color: #666;
}
.shopDetailsInfoCon image {
	width: 100%;
}

